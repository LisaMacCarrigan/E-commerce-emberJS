<div class="container">
  <div class="row">
    <div class="col-sm-7">
      <h3>Products</h3>
      <h4>{{#link-to 'store'}}View All Items{{/link-to}}</h4>
      <ul class="list-group">
        {{#each model as |product|}}
          {{product-tile product=product}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-5">
      <h3>Shopping Cart</h3>
      <ol class="list-group">
        {{display-cart}}
      </ol>
    </div>
  </div>
</div>
